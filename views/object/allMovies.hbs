{{> header}}
<div id="cinema">
    <h1>All Movies</h1>
    <form action="#/object/all" method="GET">
        <label>Search genre:</label>
        <input type="text" name="search">
        <input type="submit" value="Search">
    </form>
    <div class="movies">
        {{#each data}}
            <div class="movie">
                <h2>Title: {{title}}</h2>
                <img src="{{imageUrl}}">
                <p>Available Tickets: {{tickets}}</p><button><a href="#/object/{{objectId}}/ticket">Buy Ticket</a></button>
                <button><a href="#/object/details/{{objectId}}">Details</a></button>
            </div>
        {{/each}}
    </div>
</div>

{{> footer}}