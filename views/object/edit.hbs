{{> header}}
<div id="editMovie">
    <h1>Edit movie</h1>
    <form action="#/object/update/{{data.objectId}}" method="POST">
        <label>Title</label>
        <input type="text" name="title" value="{{data.title}}" id="editTitle">
        <label>Image Url</label>
        <input type="text" name="imageUrl" id="editImage"
               value="{{data.imageUrl}}">
        <label>Description</label>
        <textarea type="text" id="editDescription"
                  name="description">{{data.description}}</textarea>
        <label>Genres</label>
        <input type="text" name="genres" value="{{data.genres}}" id="editGenres">
        <label>Available Tickets</label>
        <input type="number" name="tickets" value="{{data.tickets}}" id="editTickets">
        <input type="submit" value="Edit">
    </form>
</div>
{{> footer}}